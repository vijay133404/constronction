<%= form_with(model: inquiry, local: true) do |form| %>
  <% if inquiry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(inquiry.errors.count, "error") %> prohibited this inquiry from being saved:</h2>

      <ul>
      <% inquiry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :inquiry_name %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :inquiry_email %>
  </div>

  <div class="field">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number, id: :inquiry_phone_number %>
  </div>

  <div class="field">
    <%= form.label :inquiry_type %>
    <%= form.select(:inquiry_type ,InquiryType.all.collect{|inq_type| [inq_type.name,inq_type.id]},:prompt => 'Select InquiryType')%>
    
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :inquiry_description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
